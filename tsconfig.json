{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "~/*": [
                "./src/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "@highway-cop/road-domain",
            "google.maps"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "types/**/*.d.ts"
    ]
}